<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="../layui/layui.all.js"></script>
    <script src="../layui/layui.js"></script>
    <link rel="stylesheet" href="../layui/css/layui.css">
    <style>
        .moveRight_top li {
            width: 60px;
            height: 60px;
            float: left;
            cursor: pointer;
            margin: 5px;
        }
        .moveRight_top, .moveRight_bottom {
            height: 70px;
            width: 100%;
            background-color: #fafafa;
            box-shadow: 5px 2px 6px #efefef inset;
        }
        .moveRight_bottom_height {
            height: 38px;
        }
        #addOpreater td{width: 100px;}
    </style>
</head>
<body>

<div id="shijiantixing">
    <div class="moveRight_top chooseOpreater">
        <ul>
            <li id="tixing_add">
                        <span style="display: inline-block;margin-left: 15px;"><i class="layui-icon layui-icon-add-1"
                                                                                  style="font-size: 30px;"></i><br/>
                    增加</span>

            </li>
            <li id="tixing_edit">
                        <span style="display: inline-block;margin-left: 15px;"><i class="layui-icon layui-icon-edit"
                                                                                  style="font-size: 30px;"></i><br/>
                    修改</span>

            </li>
            <li id="tixing_delete">
                        <span style="display: inline-block;margin-left: 15px;"><i class="layui-icon layui-icon-close"
                                                                                  style="font-size: 30px;"></i><br/>
                    删除</span>

            </li>
            <li id="tixing_tui">
                    <span style="display: inline-block;margin-left: 15px;"><i class="layui-icon layui-icon-close-fill"
                                                                              style="font-size: 30px;color: red;"></i><br/>
                    退出</span></li>
        </ul>
    </div>
    <div class="moveRight_bottom layui-input-inline moveRight_bottom_height">
        <form class="layui-form layui-form-pane" action="">请选择时间段：
            <div class="layui-input-inline">
                <input type="text" class="layui-input" id="test6" placeholder=" - ">
            </div>
            请输入相关内容进行查询：
            <div class="layui-input-inline">
                <input type="text" name="title" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>
            <button type="button" class="layui-btn layui-btn-radius layui-btn-normal"
                    style="background-color: black;width: 100px;">查询
            </button>
        </form>
    </div>
    <div>
        <table class="layui-hide dataTable" id="tiXing"></table>
    </div>
</div>
<div id="addOpreater">
    <div>
        <table>
            <tr>
                <td rowspan="2">提醒内容：</td>
                <td colspan="2">库存报警提醒</td>
            </tr>
            <tr>
                <td>药品过期提醒</td>
                <td width="200px">提醒还有个月到期的药品</td>
            </tr>
            <tr>
                <td>提醒对象：</td>
                <td colspan="2">全体成员</td>
            </tr>
            <tr>
                <td>提醒方式：</td>
                <td colspan="2">一次性提醒</td>
            </tr>
            <tr>
                <td>提醒时间：</td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>
<script>
    layui.use(['table', 'laydate', 'element', 'layer', 'element'], function () {
        var laydate = layui.laydate;
        var element = layui.element;
        var $ = layui.$;
        var layer = layui.layer;
        var table = layui.table;
        $('#jinbao').click(function () {
            layer.open({
                type: 1
                , title: ['事件提醒管理', 'font-size:13px;', 'background-color:black;']
                , content: $('#shijiantixing') //这里content是一个普通的String
                , btn: ['确定', '取消']
                , area: ['800px', '500px']
            });
        });
        //tiXing
        table.render({
            elem: '#tiXing'
            , url: '/demo/table/user/'
            , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
            , totalRow: true
            , cols: [[
                {field: 'sex', width: 100, title: '提醒时间', sort: true}
                , {field: 'city', width: 100, title: '提醒方式', sort: true}
                , {field: 'city', width: 80, title: '提醒对象', sort: true}
                , {field: 'sign', width: 100, title: '提醒内容', sort: true, totalRow: true} //minWidth：局部定义当前单元格的最小宽度，layui 2.2.1 新增
                , {field: 'score', width: 100, title: '状态', sort: true}
                , {field: 'score', width: 100, title: '操作员', sort: true}
            ]]
            , page: true
        });

        //    chooseOpreater
        $('.chooseOpreater li').click(function () {
            var idValue = $(this).attr('id');
            console.log(idValue);
            if (idValue == 'tixing_add') {
                layer.open({
                    type: 1
                    , title: ['增加提醒']
                    , content: 'haohao' //这里content是一个普通的String
                    , btn: ['保存', '关闭']
                    , area: ['600px', '400px']
                });
            } else if (idValue == 'tixing_edit') {

            } else if (idValue == 'tixing_delete') {

            } else {
            }
        });
    });
</script>
</body>
</html>