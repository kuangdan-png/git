<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>单据查询</title>

    <link rel="stylesheet" href="layui/css/layui.css">
    <script src="layui/layui.js"></script>
    <script src="layui/layui.all.js"></script>
    <script src="JQuery/jquery-3.4.1.min.js"></script>
    <script src="layui/lay/modules/laydate.js"></script>
    <style>
        #button{
            margin-left: 20px;
        }
        #formdiv{
            background: #eeeeee;
            padding: 10px 0px;
        }
        .form1{
            margin-left: 80px;
        }
        .input1{
            padding:1px 4px;
            margin-right: 15px;
        }
    </style>
</head>
<body>
<div id="button">
    <button id="select" type="button" class="layui-btn layui-btn-normal"><i class="layui-icon layui-icon-search"></i>查看单据</button>
</div>
<div id="formdiv">
    <form class="form1" action="">
        输入单据号： <input type="text" name="password" class="input1"><button class="layui-btn layui-btn-sm layui-btn-radius layui-btn-normal" lay-submit lay-filter="formDemo">查询</button>
    </form>
</div>
    <table class="layui-hide" id="table1" lay-filter="test"></table>
<hr/>
    详细内容
    <table class="layui-hide" id="table2" lay-filter="test"></table>
    <script>
        //执行一个 table 实例
        layui.use('table', function(){
            var table = layui.table;
            //第一个实例
            table.render({
                elem: '#table1'
                ,height: 350
                ,url: '/demo/table/user/' //数据接口
                ,page: true //开启分页
                ,totalRow: true //开启合计行
                ,cols: [[ //表头
                    ,{field: 'username', title: '单据号', width:100}
                    ,{field: 'username', title: '开单日期', width:110}
                    ,{field: 'sex', title: '单据类型', width:100}
                    ,{field: 'city', title: '供货商/客户', width:150}
                    ,{field: 'city', title: '仓库名称', width:150}
                    ,{field: 'city', title: '应付金额', width:150}
                    ,{field: 'sign', title: '实付金额', width: 100}
                    ,{field: 'experience', title: '经办人', width: 80}
                    ,{field: 'wealth', title: '备注', width: 135}
                ]]
            });
        });

        //执行一个 table 实例
        layui.use('table', function(){
            var table = layui.table;
            //第一个实例
            table.render({
                elem: '#table2'
                ,height: 200
                ,url: '/demo/table/user/' //数据接口
                ,page: true //开启分页
                ,totalRow: true //开启合计行
                ,cols: [[ //表头
                    ,{field: 'username', title: '商品编号', width:100}
                    ,{field: 'username', title: '商品名称', width:150}
                    ,{field: 'sex', title: '单位', width:80}
                    ,{field: 'city', title: '产品规格', width:110}
                    ,{field: 'city', title: '产品批号', width:110}
                    ,{field: 'city', title: '有效期至', width:110}
                    ,{field: 'sign', title: '单价', width: 80}
                    ,{field: 'experience', title: '数量', width: 80}
                    ,{field: 'experience', title: '总金额', width: 80}
                    ,{field: 'wealth', title: '备注', width: 135}
                ]]
            });
        });
    </script>
</body>
</html>